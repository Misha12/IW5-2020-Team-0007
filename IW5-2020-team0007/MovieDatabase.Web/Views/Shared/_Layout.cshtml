
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Super Cool Movie Database</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />


</head>
<body>
    <header>
        <nav class="top-navbar navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Super Cool Movie Database</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-Item">
                            <a class="nav-Link" asp-area="" asp-controller="Movie" asp-action="List">Movies</a>
                        </li>
                        <li class="nav-Item">
                            <a class="nav-Link" asp-area="" asp-controller="User" asp-action="List">User List</a>
                        </li>
                    </ul>
                </div>
                <div class="User-button">
                    User
                    <div class="User-button-dropdown">
                        <form asp-controller="User" asp-action="Login" method="post" role="form">
                            <input class="Login-input" type="text" name="Username" placeholder="Username" />
                            <input class="Login-input" type="password" name="Password" placeholder="Password" />
                            <input type="submit" class="btn btn-primary" value="Login" />
                        </form>
                        <a class="btn btn-primary" asp-area="" asp-controller="User" asp-action="New">Register</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - MovieDatabase.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
